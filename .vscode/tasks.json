{
    "version": "2.0.0",
    "tasks": [{
            "label": "g++",
            "command": "g++",
            "args": [
                "-g",
                // "${file}",
                "${workspaceRoot}/main.cpp", "${workspaceRoot}/Sources/sort.cpp",
                // "-I",
                "-std=c++11",
                "-fexec-charset=GBK",
                "-o",
                "${workspaceRoot}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "E:\\Program Files\\TDM-GCC-64\\bin"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}